# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-secure-one
DJANGO_SETTINGS_MODULE=be.settings

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/brokerage_db
# For SQLite (development): sqlite:///db.sqlite3

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# CORS Settings (for frontend integration)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (for user notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# File Upload Settings
MEDIA_ROOT=media/
MEDIA_URL=/media/
MAX_UPLOAD_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Third-party API Keys (if needed)
# THIRD_PARTY_API_KEY=your-api-key-here

# Development/Production Flags
USE_TZ=True
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False